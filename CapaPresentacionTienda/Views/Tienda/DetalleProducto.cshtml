@model CapaEntidad.Producto
@{
    ViewBag.Title = "DetalleProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="data:image/@Html.DisplayTextFor(m => m.Extencion);base64,@Html.DisplayTextFor(m=> m.Base64)" alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">Marca:@Html.DisplayTextFor(m => m.oMarca.Descripcion)</div>
                <h1 class="display-5 fw-bolder">@Html.DisplayTextFor(m => m.Nombre)</h1>
                <div class="fs-5 mb-5">

                    <span>Precio:@Html.DisplayTextFor(m => m.Precio) USD</span>
                </div>
                <p class="lead">Descripcion:@Html.DisplayTextFor(m => m.Descripcion)</p>
                <div class="d-flex">
                    <a href="@Url.Action("Index","Tienda")" class="btn btn-danger w-50 text-centesr me-3">
                        <i class="fas fa-undo-alt"></i>volver


                    </a>
                    @if (Session["Cliente"] != null)
                    {
                        <button class="btn btn-success agregarcarrito flex-shrink-0 w-50" data-idproducto="@Html.DisplayTextFor(m => m.IdProducto)">
                            <i class="fas fa-cart-pluss"></i>
                            Agregar
                        </button>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
         $(document).on("click", "button.agregarcarrito", function () {
            jQuery.ajax({
                url: "@Url.Action("AgregarCarrito", "Tienda")",
                type: "POST",
                data: JSON.stringify({ idproducto: $(this).data("idproducto") }),
                datatype: "json",
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    if (data.respuesta) {
                        MostrarCantidadCarrito();
                        @*swal({
                            title: "Agregar al Carrito",
                            text: "¿Desea ir a las compras",
                            type: "success",
                            showCancelButton: true,
                            confirmButtonClass: "btn-primary",
                            confirButtonText: "Si",
                            cancelButtonText: "No",
                            closeOnConfirm: true
                        }, function () {
                            window.location.href = '@Url.Action("Carrito", "Tienda")'
                        })*@
                        swal("", "Agregado al carrito", "success");

                    }
                    else {
                        swal("", data.mensaje,  "warning");
                    }
                }
            })


        })

    </script>

}
